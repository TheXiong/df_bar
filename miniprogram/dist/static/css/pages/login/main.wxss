
.login {
  position: relative;
  top: 0;
  left: 0;
  padding: 0 90rpx;
}
.login ._p {
  text-align: center;
}
.login-title {
  color: #111111;
  font-size: 40rpx;
  padding: 80rpx 0 60rpx;
}
.login .section {
  position: relative;
}
.login .section ._input {
  width: 100%;
  height: auto;
  font-size: 28rpx;
  border-bottom: 2rpx solid #666;
  margin-bottom: 60rpx;
}
.login .section .input-holder {
  color: #777777;
  font-size: 28rpx;
}
.login .section .code-input {
  width: 55%;
}
.login .section .code {
  position: absolute;
  right: 0;
  top: 0;
}
.login .btn {
  color: #fff;
  background: #373737;
  margin: 20rpx 0 40rpx;
}
.login .login-text {
  line-height: 2;
  font-size: 24rpx;
  color: #777777;
  text-decoration: none;
  text-align: center;
}